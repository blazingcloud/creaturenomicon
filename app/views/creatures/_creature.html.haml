.creature{:id => creature.name}
  .picture
    / = creature.picture.url
    =image_tag(creature.picture_url(:thumbnail), :width => 50, :height => 50, :id => creature.name)
  .name
    .label Name
    =creature.name
  .description
    .label Description
    =creature.description
  .habitat
    .label Habitat
    =creature.habitat
  .type
    .label Type
    =creature.creature_type
  .friends
    .label Friends
  -if creature.friends
    =creature.friends.join(' ')
  %br
  .btn
    %span= link_to "Edit", edit_creature_path(creature), :id => "Edit", :title => "Edit"

